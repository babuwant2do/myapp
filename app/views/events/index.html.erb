<h1>
  Listing Evetns
</h1>

<%= link_to "New Event", new_event_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Details</th>
    <th>Show</th>
    <th>Edit</th>
  </tr>

  <% @events.each do |event| %>
  <tr>
    <td><%= event.title %></td>
    <td><%= event.description %></td>
    <td><%= link_to 'show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Delete', event_path(event), method: :delete, data:{confirm: 'Are you sure?'} %></td>
  </tr>
  <% end %>
</table>